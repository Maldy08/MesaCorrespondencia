@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <EditForm Model="@oficio">
            <DataAnnotationsValidator />
            <MudGrid>
               <MudItem xs="4">
                    Folio
                    <MudChip>@oficio.Folio</MudChip>
                </MudItem>

                <MudItem xs="4">
                    <MudRadioGroup T="int" @bind-SelectedOption="oficio.Tipo">
                        <MudRadio Option="1" Color="Color.Primary" UnCheckedColor="Color.Default">CEA</MudRadio>
                        <MudRadio Option="2" Color="Color.Primary" UnCheckedColor="Color.Default">SEPROA</MudRadio>
                    </MudRadioGroup>
                </MudItem>

                <MudItem xs="4">
                    Fecha
                    <MudChip>@oficio.Fecha</MudChip>
                </MudItem>

                <MudItem xs="4">
                    <MudTextField Label="Numero de oficio" @bind-Value="oficio.NoOficio"  />
                </MudItem>
       
                <MudItem xs="4">
                    <MudDatePicker Label="Fecha de documento" Date="@oficio.FechaCaptura" DisableToolbar="true" />
                </MudItem>

                <MudItem xs="4">
                    <MudDatePicker Label="Fecha Limite" Date="@oficio.FechaLimite" DisableToolbar="true" />
                </MudItem>

                 <MudItem lg="6">
                    <MudTextField T="string" Value="@oficio.RemNombre" ReadOnly="true" Label="Nombre del Remitente" Placeholder="Persona que firma el oficio"/>
                </MudItem>

                <MudItem lg="6">
                    <MudTextField T="string" Value="@oficio.DestNombre" ReadOnly="true" Label="Nombre del Destinatario" Placeholder="Persona a quien se dirige el Oficio"/>
                </MudItem>

                <MudItem lg="6">
                    <MudTextField T="string" Value="@oficio.Tema" Label="Tema" Placeholder="Capture el tema principal del oficio"/>
                </MudItem>
                <MudItem lg="6">
                    <MudTextField T="string" Label="Filled" Variant="Variant.Filled" Text="@sampleText" Lines="5"/>
                </MudItem>

                <MudItem lg="6">
                    <MudCardActions>
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Cancelar</MudButton>
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Guardar</MudButton>
                    </MudCardActions>
                </MudItem>
             </MudGrid>
        </EditForm>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance mudDialog { get; set; }
    [Parameter]
    public VwOficiosLista? oficioEdit { get; set; } 
    private VwOficiosLista oficio = new();
    private string sampleText = "Este es un texto de ejemplo";
    void Submit() => mudDialog.Close(DialogResult.Ok(true));
    void Cancel() => mudDialog.Cancel();

    protected override void OnInitialized()
    {
        if (oficioEdit != null)
            oficio = oficioEdit;
        else
            oficioEdit = new();
    }
}
